%html{ lang: "en" }
  %head
    %meta{ charset: "utf-8" }
    %title Skillshare.im - #{yield(:title).presence || "Sharing Between Effective Altruists" }
    = render 'layouts/dependencies'

  %body
    %div#fb-root

    = render "shared/banner"

    #wrap
      = render "shared/header"

      .container
        - flash.each do |name, msg|
          %div{ class: alert_type(name) }= msg

      .container
        = yield

    = render "shared/footer"

    %footer
      = render "layouts/analytics_tracking"

      = yield :footer
